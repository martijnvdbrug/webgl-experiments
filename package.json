{
  "name": "webgl-experiments",
  "version": "1.0.0",
  "description": "WebGL experiments",
  "scripts": {
    "dev-server": "yarn webpack-dev-server --hot",
    "build": "yarn webpack -w",
    "serve": "concurrently --kill-others \"yarn build\" \"yarn dev-server\"",
    "serve:farley": "export PROJECT=farley-banner && concurrently --kill-others \"yarn build\" \"yarn dev-server\"",
    "serve:hello": "export PROJECT=threejs-hello-world && concurrently --kill-others \"yarn build\" \"yarn dev-server\""
  },
  "license": "MIT",
  "devDependencies": {
    "@types/pixi.js": "^4.8.6",
    "@types/webfontloader": "^1.6.29",
    "concurrently": "^4.1.0",
    "ts-loader": "^4.0.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@pixi/filter-glitch": "^2.7.0",
    "pixi.js": "^4.8.5",
    "three": "^0.102.1",
    "webfontloader": "^1.6.28"
  }
}
